{
  "name": "fin",
  "private": true,
  "packageManager": "pnpm@9.15.4",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "test": "vitest run",
    "test:backend": "vitest run --project backend",
    "test:frontend": "vitest run --project frontend",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,mts,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,mts,json,md}\"",
    "db:generate": "turbo db:generate",
    "db:migrate": "turbo db:migrate",
    "db:push": "turbo db:push",
    "db:studio": "pnpm --filter @fin/web drizzle-kit studio",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "clean": "turbo clean && rm -rf node_modules"
  },
  "pnpm": {
    "overrides": {
      "drizzle-orm": "0.38.4"
    }
  },
  "devDependencies": {
    "@clerk/testing": "^1.13.36",
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.58.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.0.7",
    "@types/react-dom": "^19.0.3",
    "eslint": "^9.18.0",
    "jsdom": "^28.0.0",
    "prettier": "^3.4.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "turbo": "^2.3.3",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.55.0",
    "vitest": "^2.1.8"
  }
}
