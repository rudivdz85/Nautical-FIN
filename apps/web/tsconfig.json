{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@fin/core": [
        "../../packages/core/src/index.ts"
      ],
      "@fin/core/*": [
        "../../packages/core/src/*/index.ts"
      ],
      "@fin/logger": [
        "../../packages/logger/src/index.ts"
      ]
    },
    "allowJs": true,
    "incremental": true
  },
  "include": [
    "drizzle.config.ts",
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
